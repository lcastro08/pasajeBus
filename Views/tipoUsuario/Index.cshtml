@model List<MiPrimerEntityFramework.Models.tipoUsuarioCLS>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index","tipoUsuario",FormMethod.Post,new { @id="frmBuscar"}))
{ 
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => Model[0].iidtipousuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model[0].nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model[0].descripcion)
        </th>
        <th>Operaciones</th>
    </tr>
    <tr>
        <td>@Html.TextBox("iidtipousuario",null ,new { @class="form-control"})</td>
        <td>@Html.TextBox("nombre",null,new {@class = "form-control" })</td>
        <td>@Html.TextBox("descripcion",null,new { @class="form-control"})</td>
        <td></td>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.iidtipousuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>

}
<script>
    var iidtipousuario = document.getElementById("iidtipousuario");
    var nombre = document.getElementById("nombre");
    var descripcion = document.getElementById("descripcion");
    var frmBuscar = document.getElementById("frmBuscar");

    iidtipousuario.onkeyup = function () {
        frmBuscar.submit();
    }
    nombre.onkeyup = function () {
        frmBuscar.submit();
    }
    descripcion.onkeyup = function () {
        frmBuscar.submit();
    }
</script>